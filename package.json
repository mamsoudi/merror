{
  "name": "express-merror",
  "version": "1.0.0",
  "description": "A REST-friendly HTTP error handler middleware for Express.js",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mamsoudi/merror.git"
  },
  "keywords": [
    "express",
    "express-middleware",
    "middleware",
    "expressjs",
    "error-handling"
  ],
  "author": "Masoud Mirzaei <mamos98@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mamsoudi/merror/issues"
  },
  "homepage": "https://github.com/mamsoudi/merror#readme",
  "scripts": {
    "start": "npm run build && node --inspect=5858 -r ts-node/register ./example/server.ts",
    "watch": "nodemon",
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.16.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/express": "^4.11.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^8.5.2",
    "@types/sinon": "^7.5.0",
    "babel-jest": "^24.9.0",
    "jest": "^24.9.0",
    "nodemon": "^1.12.5",
    "sinon": "^7.5.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.8.0",
    "typescript": "^3.6.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "example"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
